{
  "manifest_version": 3,
  "name": "Canvas to ChatGPT",
  "version": "1.0.0",
  "description": "Extracts content from a Canvas page and sends it to ChatGPT.",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting",
    "clipboardWrite"
  ],
  "host_permissions": [
    "*://*.instructure.com/*",
    "*://chatgpt.com/*",
    "*://*.chat.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
