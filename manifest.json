{
  "manifest_version": 3,
  "name": "Canvas to ChatGPT",
  "version": "1.0.0",
  "description": "Effortlessly sends content from any Canvas page to ChatGPT for context-aware assistance.",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "*://*.instructure.com/*",
    "*://chatgpt.com/*",
    "*://*.chat.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
